{
  "version": "independent",
  "npmClient": "yarn",
  "registry": "https://registry.npmjs.org/",
  "publishConfig": {
    "access": "public"
  },
  "useWorkspaces": true,
  "packages": [
    "packages/*",
    "portfolio"
  ],
  "command": {
    "publish": {
      "conventionalCommits": true,
      "message": "chore(release): publish"
    },
    "version": {
      "conventialCommits": true,
      "includeMergedTags": true
    }
  },
  "ignoreChanges:": [
    "**/node_modules/**",
    "**/dist/**",
    "**/CHANGELOG.md",
    "**/*.stories.tsx"
  ]
}

