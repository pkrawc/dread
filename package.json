{
  "license": "MIT",
  "private": true,
  "name": "dread",
  "description": "Dreadful design system monorepo",
  "scripts": {
    "bootstrap": "yarn && lerna bootstrap",
    "build": "lerna run --stream build --ignore @dread/portfolio",
    "build:dev": "lerna run --stream build:dev",
    "build:storybook": "build-storybook",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "create": "ts-node ./scripts/create-package.ts",
    "start": "concurrently -n microbundle,storybook \"yarn start:packages\" \"yarn start:storybook\"",
    "start:packages": "lerna run --parallel watch",
    "start:portfolio": "lerna run --stream --scope @dread/portfolio dev",
    "start:storybook": "start-storybook --port 8080 --quiet",
    "test": "jest"
  },
  "author": "Patrick <patrick@dreadful.design>",
  "workspaces": [
    "packages/*",
    "portfolio"
  ],
  "prettier": {
    "semi": false
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@storybook/addon-actions": "^6.1.21",
    "@storybook/addon-essentials": "^6.1.21",
    "@storybook/addon-links": "^6.1.21",
    "@storybook/react": "^6.1.21",
    "@types/node": "^14.14.32",
    "@types/react": "^17.0.3",
    "@types/shelljs": "^0.8.8",
    "@types/styled-components": "^5.1.7",
    "@types/styled-system": "^5.1.10",
    "@types/styled-system__css": "^5.0.14",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.0.0",
    "lerna": "^4.0.0",
    "microbundle": "^0.13.0",
    "prettier": "^2.2.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "shelljs": "^0.8.4",
    "styled-components": "^5.2.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  }
}
