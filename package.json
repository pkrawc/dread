{
  "name": "dread",
  "version": "0.0.0",
  "description": "Dreadful monorepo",
  "main": "none",
  "scripts": {
    "test": "lerna run test",
    "build:packages": "lerna run --parallel watch",
    "clean": "lerna clean --yes && rm -rf node_modules"
  },
  "author": "Patrick <patrick@dreadful.design>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.14.32",
    "@types/react": "^17.0.3",
    "@types/styled-components": "^5.1.7",
    "lerna": "^4.0.0",
    "microbundle": "^0.13.0",
    "typescript": "^4.2.3"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "@emotion/core/types",
      "**/@emotion/core/types",
      "**/@types/theme-ui",
      "**/@types/theme-ui/**",
      "**/@types/theme-ui__components"
    ]
  }
}
