{
  "license": "MIT",
  "private": true,
  "name": "dread",
  "description": "Dreadful design system monorepo",
  "scripts": {
    "boot": "yarn && lerna bootstrap",
    "build": "lerna run --stream build --ignore @dread/portfolio",
    "build:dev": "lerna run --stream build:dev",
    "build:storybook": "build-storybook",
    "clean": "lerna clean --yes && rm -rf node_modules",
    "create": "ts-node ./scripts/create-package.ts",
    "start": "concurrently -n microbundle,storybook \"yarn start:packages\" \"yarn start:storybook\"",
    "start:packages": "lerna run --parallel watch",
    "start:portfolio": "lerna run --stream --scope @dread/portfolio dev",
    "start:storybook": "start-storybook --port 8080 --quiet",
    "test": "jest",
    "graduate": "lerna version --no-push --no-private",
    "release": "lerna publish from-package --yes"
  },
  "author": "Patrick <patrick@dreadful.design>",
  "workspaces": {
    "packages": [
      "packages/*",
      "portfolio"
    ]
  },
  "prettier": {
    "semi": false
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@storybook/addon-actions": "^6.3.4",
    "@storybook/addon-essentials": "^6.3.4",
    "@storybook/addon-links": "^6.3.4",
    "@storybook/react": "^6.3.4",
    "@types/lodash.merge": "^4.6.6",
    "@types/node": "^16.3.1",
    "@types/react": "^17.0.14",
    "@types/shelljs": "^0.8.9",
    "@types/styled-components": "^5.1.11",
    "@types/styled-system": "^5.1.12",
    "@types/styled-system__css": "^5.0.16",
    "babel-loader": "^8.2.2",
    "concurrently": "^6.2.0",
    "lerna": "^4.0.0",
    "microbundle": "^0.13.3",
    "prettier": "^2.3.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-feather": "^2.0.9",
    "shelljs": "^0.8.4",
    "styled-components": "^5.3.0",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5"
  },
  "version": "0.0.0"
}
